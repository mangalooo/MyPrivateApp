            if (!string.IsNullOrEmpty(searchValue))
            {
                IEnumerable<HuntingTowerInspection> result = await db.HuntingTowerInspections
                    .Where(c => c.Number != null && c.Number.Contains(searchValue))
                    .ToListAsync();

