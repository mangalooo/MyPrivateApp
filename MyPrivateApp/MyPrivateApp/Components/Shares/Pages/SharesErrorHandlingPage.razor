@* Back-End *@
@code
{
    [SupplyParameterFromForm]
    private SharesErrorHandlingViewModel pageModel { get; set; } = new();

    PaginationState pagination = new PaginationState { ItemsPerPage = 10 };
    private IQueryable<SharesErrorHandlingViewModel> queryable = Enumerable.Empty<SharesErrorHandlingViewModel>().AsQueryable();

    // Holds temporary id to delete items
    private int TemporaryId { get; set; } = 0;

    // Modol window settings
    private Guid Guid = Guid.NewGuid();
    private string ModalDisplay = "none;";
    private string ModalClass = "";
    private bool ShowBackdrop = false;

    // Hide button and fields
    private bool HideNewOrChangesFields { get; set; } = false;
    private bool ShowOrHideEditButton { get; set; } = false;
    private bool DisabledForm { get; set; } = false;

    // Load data from database to the Queryable container
    private void ConvertListToQueryable()
    {
        if (db.SharesErrorHandlings.Count() == 0) return;

        queryable = Enumerable.Empty<SharesErrorHandlingViewModel>().AsQueryable();

        foreach (SharesErrorHandlings model in db.SharesErrorHandlings.OrderBy(c => c.ErrorHandlingsId))
        {
            SharesErrorHandlingViewModel vm = SharesErrorHandlingClass.ChangeFromModelToViewModel(model);
            queryable = queryable.Concat(new[] { vm }.AsQueryable());
        }

        pagination.TotalItemCountChanged += (sender, EventArgs) => StateHasChanged();
    }

    protected override void OnInitialized() => ConvertListToQueryable();

    private void HideNewOrChangesForm()
    {
        HideNewOrChangesFields = !HideNewOrChangesFields;
        ShowOrHideEditButton = true;
    }

    private void RefreshPage() => Navigation.Refresh(true);

    private void Update()
    {
        DisabledForm = false;

        if (pageModel.ErrorHandlingsId > 0)
            SharesErrorHandlingClass.Edit(db, pageModel);

        pageModel = new();
        Navigation.Refresh(true);

        return;
    }

    private void Info(SharesErrorHandlingViewModel vm)
    {
        HideNewOrChangesForm();
        DisabledForm = true;
        pageModel = vm;
    }

    private void Edit(SharesErrorHandlingViewModel vm)
    {
        DisabledForm = false;
        ShowOrHideEditButton = false;
        HideNewOrChangesFields = true;
        pageModel = vm;
    }

    private void Delete()
    {
        if (db.SharesErrorHandlings.Count() == 0) return;

        bool findId = db.SharesErrorHandlings.Any(a => a.ErrorHandlingsId == TemporaryId);

        if (findId)
        {
            SharesErrorHandlings model = db.SharesErrorHandlings.FirstOrDefault(a => a.ErrorHandlingsId == TemporaryId);
            SharesErrorHandlingViewModel vm = SharesErrorHandlingClass.ChangeFromModelToViewModel(model);

            SharesErrorHandlingClass.Delete(db, vm);

            pageModel = new();
            Navigation.Refresh(true);
        }
    }

    private void OpenDeleteWindow(SharesErrorHandlingViewModel vm)
    {
        ModalDisplay = "block;";
        ModalClass = "Show";
        ShowBackdrop = true;
        StateHasChanged();
        TemporaryId = vm.ErrorHandlingsId;
    }

    private void CloseWindow()
    {
        ModalDisplay = "none";
        ModalClass = "";
        ShowBackdrop = false;
        StateHasChanged();
    }
}