<br />

@code
{
    [SupplyParameterFromForm]
    private SharesInterestRatesViewModel InterestRates { get; set; } = new();

    PaginationState pagination = new PaginationState { ItemsPerPage = 10 };
    private IQueryable<SharesInterestRatesViewModel> InterestRatesQueryable = Enumerable.Empty<SharesInterestRatesViewModel>().AsQueryable();

    // Modol window settings
    private Guid Guid = Guid.NewGuid();
    private string ModalDisplay = "none;";
    private string ModalClass = "";
    private bool ShowBackdrop = false;

    // Hide button and fields
    private bool HideNewOrChangesFields { get; set; } = false;
    private bool ShowOrHideCreateButton { get; set; } = false;
    private bool ShowOrHideEditButton { get; set; } = false;
    private bool ShowOrHideAddNewButton { get; set; } = false;
    private bool DisabledForm { get; set; } = false;

    // Load data from database to the Queryable container
    private void ConvertListToQueryable()
    {
        if (db.SharesInterestRates.Count() == 0) return;

        InterestRatesQueryable = Enumerable.Empty<SharesInterestRatesViewModel>().AsQueryable();

        foreach (SharesInterestRates model in db.SharesInterestRates.OrderBy(c => c.InterestRatesId))
        {
            SharesInterestRatesViewModel interestRates = SharesInterestRatesClass.ChangeFromModelToViewModel(model);
            InterestRatesQueryable = InterestRatesQueryable.Concat(new[] { interestRates }.AsQueryable());
        }

        pagination.TotalItemCountChanged += (sender, EventArgs) => StateHasChanged();
    }

    protected override void OnInitialized() => ConvertListToQueryable();

    private void HideNewOrChangesForm()
    {
        HideNewOrChangesFields = !HideNewOrChangesFields;
        ShowOrHideCreateButton = true;
        ShowOrHideEditButton = true;
    }

    private void RefreshPage() => Navigation.Refresh(true);

    private void AddOrEdit()
    {
        DisabledForm = false;

        if (InterestRates.InterestRatesId > 0)
        {
            ShowOrHideCreateButton = true;

            SharesInterestRatesClass.Edit(db, InterestRates);
        }
        else
            SharesInterestRatesClass.Add(db, InterestRates, false);

        InterestRates = new();
        Navigation.Refresh(true);

        return;
    }

    private void Info(SharesInterestRatesViewModel vm)
    {
        HideNewOrChangesForm();
        ShowOrHideAddNewButton = true;
        DisabledForm = true;
        InterestRates = vm;
    }

    private void Edit(SharesInterestRatesViewModel vm)
    {
        DisabledForm = false;
        ShowOrHideEditButton = false;
        ShowOrHideAddNewButton = true;
        HideNewOrChangesFields = true;
        InterestRates = vm;
    }

    private void Delete(SharesInterestRatesViewModel vm)
    {
        if (db.SharesInterestRates.Count() == 0) return;

        SharesInterestRatesClass.Delete(db, vm, false);

        InterestRates = new();
        Navigation.Refresh(true);
    }

    private void OpenDeleteWindow()
    {
        ModalDisplay = "block;";
        ModalClass = "Show";
        ShowBackdrop = true;
        StateHasChanged();
    }

    private void CloseWindow()
    {
        ModalDisplay = "none";
        ModalClass = "";
        ShowBackdrop = false;
        StateHasChanged();
    }
}