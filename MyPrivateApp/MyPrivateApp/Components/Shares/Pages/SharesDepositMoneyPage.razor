@* Back-End *@
@code
{
    [SupplyParameterFromForm]
    private SharesDepositMoneyViewModel pageModel { get; set; } = new();

    PaginationState pagination = new PaginationState { ItemsPerPage = 10 };
    private IQueryable<SharesDepositMoneyViewModel> queryable = Enumerable.Empty<SharesDepositMoneyViewModel>().AsQueryable();

    // Holds temporary id to delete items
    private int TemporaryId { get; set; } = 0;

    // Modol window settings
    private Guid Guid = Guid.NewGuid();
    private string ModalDisplay = "none;";
    private string ModalClass = "";
    private bool ShowBackdrop = false;

    // Hide button and fields
    private bool HideNewOrChangesFields { get; set; } = false;
    private bool ShowOrHideCreateButton { get; set; } = false;
    private bool ShowOrHideEditButton { get; set; } = false;
    private bool ShowOrHideAddNewButton { get; set; } = false;
    private bool DisabledForm { get; set; } = false;
    private bool ShowOrHideErrorMessage { get; set; } = true;

    // Text messeges
    private string ErrorMessage { get; set; } = string.Empty;

    // Load data from database to the Queryable container
    private void ConvertListToQueryable()
    {
        if (db.SharesDepositMoney.Count() == 0) return;

        queryable = Enumerable.Empty<SharesDepositMoneyViewModel>().AsQueryable();

        foreach (SharesDepositMoney model in db.SharesDepositMoney.OrderBy(c => c.DepositMoneyId))
        {
            SharesDepositMoneyViewModel vm = BackEndClass.ChangeFromModelToViewModel(model);
            queryable = queryable.Concat(new[] { vm }.AsQueryable());
        }

        pagination.TotalItemCountChanged += (sender, EventArgs) => StateHasChanged();
    }

    protected override void OnInitialized() => ConvertListToQueryable();

    private void HideNewOrChangesForm()
    {
        HideNewOrChangesFields = !HideNewOrChangesFields;
        ShowOrHideCreateButton = true;
        ShowOrHideEditButton = true;
    }

    private void RefreshPage() => Navigation.Refresh(true);

    private void AddOrEdit()
    {
        DisabledForm = false;

        if (pageModel.DepositMoneyId > 0)
        {
            // Edit
            ErrorMessage = BackEndClass.Edit(db, pageModel);

            if (!string.IsNullOrEmpty(ErrorMessage))
            {
                ShowOrHideErrorMessage = false;
                HideNewOrChangesFields = true;
                ShowOrHideEditButton = false;
                return;
            }
            else
            {
                pageModel = new();
                Navigation.Refresh(true);
                return;
            }
        }
        else
        {
            // Add
            ErrorMessage = BackEndClass.Add(db, pageModel, false);

            if (!string.IsNullOrEmpty(ErrorMessage))
            {
                ShowOrHideErrorMessage = false;
                HideNewOrChangesFields = true;
                ShowOrHideEditButton = true;
                return;
            }
            else
            {
                pageModel = new();
                Navigation.Refresh(true);
                return;
            }
        }
    }

    private void Info(SharesDepositMoneyViewModel vm)
    {
        HideNewOrChangesForm();
        ShowOrHideAddNewButton = true;
        DisabledForm = true;
        pageModel = vm;
    }

    private void Edit(SharesDepositMoneyViewModel vm)
    {
        DisabledForm = false;
        ShowOrHideEditButton = false;
        ShowOrHideCreateButton = true;
        ShowOrHideAddNewButton = true;
        HideNewOrChangesFields = true;
        pageModel = vm;
    }

    private void Delete()
    {
        if (db.SharesDepositMoney.Count() == 0) return;

        bool findId = db.SharesDepositMoney.Any(a => a.DepositMoneyId == TemporaryId);

        if (findId)
        {
            SharesDepositMoney model = db.SharesDepositMoney.FirstOrDefault(a => a.DepositMoneyId == TemporaryId);
            SharesDepositMoneyViewModel vm = BackEndClass.ChangeFromModelToViewModel(model);

            ErrorMessage = BackEndClass.Delete(db, vm);

            if (!string.IsNullOrEmpty(ErrorMessage))
            {
                ShowOrHideErrorMessage = false;
                return;
            }
            else
            {
                pageModel = new();
                Navigation.Refresh(true);
                return;
            }
        }
    }

    private void OpenDeleteWindow(SharesDepositMoneyViewModel vm)
    {
        ModalDisplay = "block;";
        ModalClass = "Show";
        ShowBackdrop = true;
        StateHasChanged();
        TemporaryId = vm.DepositMoneyId;
    }

    private void CloseWindow()
    {
        ModalDisplay = "none";
        ModalClass = "";
        ShowBackdrop = false;
        StateHasChanged();
    }

    private double GetTotalAmount()
    {
        SharesTotalAmounts sharesTotalAmounts = BackEndClass.GetTotalAmount(db, 1);

        if (sharesTotalAmounts == null) return 0;

        return sharesTotalAmounts.TotalAmount;
    }
}