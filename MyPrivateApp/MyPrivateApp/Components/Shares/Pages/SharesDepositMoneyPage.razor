                                <ValidationMessage For="() => pageModel.TypeOfTransaction" class="text-danger" />
                            </div>
                        </div>

                        <div class="col-3">
                            <div class="form-floating">
                                <InputText @bind-Value="pageModel.TransferOptions" class="form-control" disabled="@DisabledForm" />
                                <label for="TransferOptions"> Från </label>
                                <ValidationMessage For="() => pageModel.TransferOptions" class="text-danger" />
                            </div>
