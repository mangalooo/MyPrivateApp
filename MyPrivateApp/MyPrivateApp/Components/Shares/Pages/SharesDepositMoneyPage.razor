                            </div>
                        </div>

                        <div class="col-4">
                            <div class="form-floating">
                                <InputNumber @bind-Value="pageModel.DepositMoney" class="form-control" disabled="@DisabledForm" />
                                <label for="DepositMoney"> Belopp </label>
                                <ValidationMessage For="() => pageModel.DepositMoney" class="text-danger" />
                            </div>
                        </div>

                    </div>

                    <br />

