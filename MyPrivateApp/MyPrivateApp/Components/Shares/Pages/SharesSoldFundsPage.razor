@code
{
    [SupplyParameterFromForm]
    private SharesSoldFundViewModel sharesSoldFund { get; set; } = new();

    PaginationState pagination = new PaginationState { ItemsPerPage = 10 };
    private IQueryable<SharesSoldFundViewModel> SoldFondQueryable = Enumerable.Empty<SharesSoldFundViewModel>().AsQueryable();

    // Modol window settings
    private Guid Guid = Guid.NewGuid();
    private string ModalDisplay = "none;";
    private string ModalClass = "";
    private bool ShowBackdrop = false;

    // Hide button and fields
    private bool HideNewOrChangesFields { get; set; } = false;
    private bool ShowOrHideCreateButton { get; set; } = false;
    private bool ShowOrHideEditButton { get; set; } = false;
    private bool ShowOrHideAddNewButton { get; set; } = false;
    private bool DisabledForm { get; set; } = false;
    private bool ShowOrHideErrorMessage { get; set; } = true;

    // Text messeges
    private string ErrorMessage { get; set; } = string.Empty;

    // Load data from database to the Queryable container
    private void ConvertListToQueryable()
    {
        if (db.SharesSoldFunds.Count() == 0) return;

        SoldFondQueryable = Enumerable.Empty<SharesSoldFundViewModel>().AsQueryable();

        foreach (SharesSoldFunds model in db.SharesSoldFunds.OrderBy(c => c.SharesSoldFundId))
        {
            SharesSoldFundViewModel vm = SharesSoldFundsClass.ChangeFromModelToViewModel(model);
            SoldFondQueryable = SoldFondQueryable.Concat(new[] { vm }.AsQueryable());
        }

        pagination.TotalItemCountChanged += (sender, EventArgs) => StateHasChanged();
    }

    protected override void OnInitialized() => ConvertListToQueryable();

    private void HideNewOrChangesForm()
    {
        HideNewOrChangesFields = !HideNewOrChangesFields;
        ShowOrHideCreateButton = true;
        ShowOrHideEditButton = true;
    }

    private void RefreshPage() => Navigation.Refresh(true);

    private void AddOrEdit()
    {
        DisabledForm = false;

        // Edit
        if (sharesSoldFund.SharesSoldFundId > 0)
        {
            ErrorMessage = SharesSoldFundsClass.Edit(db, sharesSoldFund, false);

            if (!string.IsNullOrEmpty(ErrorMessage))
            {
                ShowOrHideErrorMessage = false;
                HideNewOrChangesFields = true;
                ShowOrHideEditButton = false;
                return;
            }
            else
            {
                sharesSoldFund = new();
                Navigation.Refresh(true);
                return;
            }
        }
        else
        {
            // Add
            ErrorMessage = SharesSoldFundsClass.Add(db, sharesSoldFund, false);

            if (!string.IsNullOrEmpty(ErrorMessage))
            {
                ShowOrHideErrorMessage = false;
                HideNewOrChangesFields = true;
                return;
            }
            else
            {
                sharesSoldFund = new();
                Navigation.Refresh(true);
                return;
            }
        }
    }

    private void Info(SharesSoldFundViewModel vm)
    {
        HideNewOrChangesForm();
        ShowOrHideAddNewButton = true;
        DisabledForm = true;
        sharesSoldFund = vm;
    }

    private void Edit(SharesSoldFundViewModel vm)
    {
        DisabledForm = false;
        ShowOrHideEditButton = false;
        ShowOrHideAddNewButton = true;
        ShowOrHideCreateButton = true;
        HideNewOrChangesFields = true;
        sharesSoldFund = vm;
    }

    private void Delete(SharesSoldFundViewModel vm)
    {
        if (db.SharesSoldFunds.Count() == 0) return;

        ErrorMessage = SharesSoldFundsClass.Delete(db, vm, false);

        if (!string.IsNullOrEmpty(ErrorMessage))
        {
            ShowOrHideErrorMessage = false;
            return;
        }
        else
        {
            sharesSoldFund = new();
            Navigation.Refresh(true);
            return;
        }
    }

    private void OpenDeleteWindow()
    {
        ModalDisplay = "block;";
        ModalClass = "Show";
        ShowBackdrop = true;
        StateHasChanged();
    }

    private void CloseWindow()
    {
        ModalDisplay = "none";
        ModalClass = "";
        ShowBackdrop = false;
        StateHasChanged();
    }
}